{
  "$id": "dm_directoryParents",
  "$schema": "https://schema.yext.com/config/km/field/v1",
  "displayName": "Directory Parents",
  "group": "NONE",
  "localization": "PRIMARY_ONLY",
  "type": {
    "listType": {
      "typeId": "entityReference",
      "type": {
        "entityReferenceType": {
          "supportedEntityTypeIds": ["ce_root", "ce_region", "ce_city"],
          "type": "ONE_WAY",
          "validation": {
            "relationship": {
              "ancestorRequired": true,
              "unique": true
            }
          }
        }
      }
    }
  },
  "typeId": "list",
  "required": false,
  "description": "Hierarchical reference to parent directory entities. Enforces strict parent-child relationships with validation.",
  "validation": {
    "maxLength": 50
  }
}
